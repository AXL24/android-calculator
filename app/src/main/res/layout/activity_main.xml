<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_scientific_toggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_scientific"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Scientific Mode" />

        <ImageView
            android:id="@+id/btn_history"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_history"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="History" />
    </LinearLayout>

    <!-- Display Area -->
    <ScrollView
        android:id="@+id/display_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/keyboard_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="end|bottom">

            <TextView
                android:id="@+id/display_previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dim_white"
                android:textSize="20sp"
                android:gravity="end"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/display_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="48sp"
                android:gravity="end"
                android:maxLines="3"
                android:layout_marginTop="8dp"
                android:text="0" />

            <TextView
                android:id="@+id/display_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textSize="24sp"
                android:gravity="end"
                android:maxLines="1"
                android:layout_marginTop="4dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <!-- Keyboard Container -->
    <HorizontalScrollView
        android:id="@+id/keyboard_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="false"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Scientific Panel -->
            <GridLayout
                android:id="@+id/scientific_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="4"
                android:padding="8dp"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sin"
                    style="@style/ScientificButton"
                    android:text="SIN"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cos"
                    style="@style/ScientificButton"
                    android:text="COS"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tan"
                    style="@style/ScientificButton"
                    android:text="TAN"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_rad_deg"
                    style="@style/ScientificButton"
                    android:text="RAD"
                    android:textSize="14sp"
                    android:textColor="@color/orange" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_log"
                    style="@style/ScientificButton"
                    android:text="LOG"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ln"
                    style="@style/ScientificButton"
                    android:text="LN"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_parenthesis_open"
                    style="@style/ScientificButton"
                    android:text="("
                    android:textSize="20sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_parenthesis_close"
                    style="@style/ScientificButton"
                    android:text=")"
                    android:textSize="20sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_factorial"
                    style="@style/ScientificButton"
                    android:text="!"
                    android:textSize="20sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sqrt"
                    style="@style/ScientificButton"
                    android:text="√"
                    android:textSize="20sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_power"
                    style="@style/ScientificButton"
                    android:text="^"
                    android:textSize="20sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_inv"
                    style="@style/ScientificButton"
                    android:text="INV"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pi"
                    style="@style/ScientificButton"
                    android:text="π"
                    android:textSize="20sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_e"
                    style="@style/ScientificButton"
                    android:text="E"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp" />

                <Space
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp" />
            </GridLayout>

            <!-- Standard Keyboard -->
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="5"
                android:padding="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear"
                    style="@style/FunctionButton"
                    android:text="AC" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete"
                    style="@style/FunctionButton"
                    android:text="⌫" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_percent"
                    style="@style/FunctionButton"
                    android:text="%" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_divide"
                    style="@style/OperatorButton"
                    android:text="÷" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_7"
                    style="@style/NumberButton"
                    android:text="7" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_8"
                    style="@style/NumberButton"
                    android:text="8" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_9"
                    style="@style/NumberButton"
                    android:text="9" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_multiply"
                    style="@style/OperatorButton"
                    android:text="×" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_4"
                    style="@style/NumberButton"
                    android:text="4" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_5"
                    style="@style/NumberButton"
                    android:text="5" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_6"
                    style="@style/NumberButton"
                    android:text="6" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_subtract"
                    style="@style/OperatorButton"
                    android:text="-" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_1"
                    style="@style/NumberButton"
                    android:text="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_2"
                    style="@style/NumberButton"
                    android:text="2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_3"
                    style="@style/NumberButton"
                    android:text="3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add"
                    style="@style/OperatorButton"
                    android:text="+" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_00"
                    style="@style/NumberButton"
                    android:text="00" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_0"
                    style="@style/NumberButton"
                    android:text="0" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_dot"
                    style="@style/NumberButton"
                    android:text="." />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_equals"
                    style="@style/OperatorButton"
                    android:text="=" />
            </GridLayout>
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>